[user]
    name = jszwedko
    email = jesse.szwedko@gmail.com

[color]
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    b = branch
    div = divergence
    fa = fetch --all
    aa = add --all
    l = log --graph --abbrev-commit --date=relative
    la = !git l --all
    r = !git --no-pager l -20
    ra = !git r --all
    head = !git l -1
    h = !git head
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    pr = pull --rebase

[format]
    pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
	tool = meld
    defaultToUpstream = true
[core]
	excludesfile = $HOME/.git-excludes
[push]
	default = tracking
